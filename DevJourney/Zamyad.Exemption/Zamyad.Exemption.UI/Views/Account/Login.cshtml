@using Microsoft.AspNetCore.Http
@model Zamyad.Exemption.UI.Models.WebSystemUserViewModel
<form asp-action="Login" method="post">
    <body onload="fnBrowserDetect()">
        
        <div class="col col-3 pagination-centered mx-auto aligns-items-center m-3 border-1 border p-3">
            <h2 class="p-2 text-center mb-4 h4" id="formHeading">ورود به سیستم</h2>
        <div class="input-group text-center">
            <span class="input-group-addon" id="userName"></span>
            <input asp-for="Username" type="text" class="form-control" placeholder="کدکاربری" aria-describedby="email-address">

        </div>
        <span asp-validation-for="Username"></span>
            <div class="input-group mt-3">
            <span class="input-group-addon" id="password"></span>
            <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">

        </div>
        <span asp-validation-for="Password"></span>


            <button class="btn btn-success btn-lg w-100 mt-4"> تایید </button>
        <br />
        <br />

        </div>

       
    </body>
</form>